<main id="search">
    <section class="game-search">
        <h1>Search</h1>

        <form class="search-form" action="/search" method="post">
            <input type="text" class="search-game" name="name" placeholder="Search here...">
            <select id="platform" name="platform">
                <option value="">-------</option>
                {{#each options}}
                <option value="{{this}}">{{this}}</option>
                {{/each}}
            </select>
            <button type="submit" class="btn-search">Search</button>
        </form>

        <div class="search-result">
            <div class="search-list">
                {{#if availableGames}}
                    {{#each availableGames}}
                    <div class="game">
                        <div class="game-img">
                            <img src="{{image}}">
                        </div>
                        <div class="game-info">
                            <h1>{{name}}</h1>
                            <p><span>Platform: </span>{{platform}}</p>
                            <p><span>Ganre: </span>{{genre}}</p>
                            <p><span>Price: </span>${{price}}</p>
                        </div>

                        <a href="/game/{{_id}}" class="btn-details">Details</a>
                    </div>
                    {{/each}}
                {{else}}
                    {{#if games}}
                        {{#each games}}
                        <div class="game">
                            <div class="game-img">
                                <img src="{{image}}">
                            </div>
                            <div class="game-info">
                                <h1>{{name}}</h1>
                                <p><span>Platform: </span>{{platform}}</p>
                                <p><span>Ganre: </span>{{genre}}</p>
                                <p><span>Price: </span>${{price}}</p>
                            </div>

                            <a href="/game/{{_id}}" class="btn-details">Details</a>
                        </div>
                        {{/each}}
                    {{else}}
                        <div class="no-match">
                            <p>No match was found!</p>
                        </div>
                    {{/if}}
                {{/if}}
                    

            </div>
        </div>


    </section>
</main>