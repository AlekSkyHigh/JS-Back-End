<main id="create">

    <section id="create-container">
        <div class="create-container-info">
            <h1>Create Game Code Offer</h1>
            <h4>Post your code to sell</h4>
            <form action="/game/create" method="post">
                <label>Platform:</label>
                <select id="platform" name="platform">
                    <option value="">-------</option>
                    {{#each options}}
                    <option value="{{this}}">{{this}}</option>
                    {{/each}}
                </select>
                <label>Name:</label>
                <input type="text" id="name" name="name" value="{{body.name}}">
                <label>Image:</label>
                <input type="text" id="image" name="image" placeholder="http://..." value="{{body.image}}">
                <label>Price:</label>
                <input type="number" id="price" name="price" value="{{body.price}}">
                <label>Genre:</label>
                <input type="text" id="genre" name="genre" value="{{body.genre}}">
                <label>Description:</label>
                <textarea id="description" name="description">{{body.description}}</textarea>

                <input type="submit" id="btn" value="CREATE"></input>
            </form>
        </div>
    </section>
</main>